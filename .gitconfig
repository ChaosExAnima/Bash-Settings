[user]
	name = Ephraim Gregor
	email = ChaosExAnima@users.noreply.github.com
	signingkey = 2C7F07CE22D44C75
[includeIf "gitdir:10up/"]
	path = .gitconfig-10up
[push]
	default = current
[pull]
	default = simple
[alias]
	current-branch = rev-parse --abbrev-ref HEAD
	b  = branch
	bm = branch --merged
	bd = branch -d
	c  = commit -S
	ca = commit -a -S
	cb = checkout -b
	cl = checkout -- .
	cm = checkout master
	co = checkout
	dm = difftool origin/master --
	dt = difftool HEAD -- .
	f  = fetch --all
	st = status
	su = submodule update
	up = pull
	mm = merge origin/master
	pr = remote prune origin
	logs = log --show-signature
[github]
	user = ChaosExAnima
[credential]
	helper = cache --timeout=604800
[core]
	fileMode = false
	pager = diff-so-fancy | less --tabs=4 -RFX
[commit]
	gpgsign = true
